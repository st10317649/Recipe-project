<Window x:Class="RecipeApp.RecipeInstructionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recipe Instructions" Height="350" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Instructions" FontWeight="Bold" FontSize="16"/>
            <TextBox Name="txtInstructions" AcceptsReturn="True" Height="200" Margin="5"/>
            <Button Content="OK" Click="Ok_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>