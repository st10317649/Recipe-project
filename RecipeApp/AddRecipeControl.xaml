<UserControl x:Class="RecipeApp.AddRecipeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:RecipeApp"
             Width="300" Height="400">
    <Grid>
        <StackPanel>
            <Label Content="Recipe Name"/>
            <TextBox Name="txtRecipeName" Margin="5"/>

            <Label Content="Number of Ingredients"/>
            <TextBox Name="txtNumIngredients" Margin="5"/>

            <Button Content="Add Ingredients" Margin="5" Click="AddIngredients_Click"/>
        </StackPanel>
    </Grid>
</UserControl>