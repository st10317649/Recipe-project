<UserControl x:Class="RecipeApp.DeleteRecipeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="300" Height="400">
    <Grid>
        <StackPanel>
            <Label Content="Select Recipe to Delete"/>
            <ComboBox Name="cmbRecipes" Margin="5" DisplayMemberPath="Name"/>
            <Button Content="Delete Recipe" Margin="5" Click="DeleteRecipe_Click"/>
        </StackPanel>
    </Grid>
</UserControl>