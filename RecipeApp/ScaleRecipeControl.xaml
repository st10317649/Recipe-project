<UserControl x:Class="RecipeApp.ScaleRecipeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="300" Height="400">
    <Grid>
        <StackPanel>
            <Label Content="Select Recipe"/>
            <ComboBox Name="cmbRecipes" Margin="5" DisplayMemberPath="Name"/>
            <Label Content="Scale Factor"/>
            <TextBox Name="txtScaleFactor" Margin="5"/>
            <Button Content="Scale Recipe" Margin="5" Click="ScaleRecipe_Click"/>
        </StackPanel>
    </Grid>
</UserControl>