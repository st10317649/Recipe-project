<Window x:Class="RecipeApp.EnterInstructionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Instructions" Height="300" Width="400">
    <Grid>
        <StackPanel>
            <Label Content="Instructions"/>
            <TextBox Name="txtInstructions" Margin="5" Height="200" AcceptsReturn="True" TextWrapping="Wrap"/>
            <Button Content="OK" Margin="5" Click="Ok_Click"/>
        </StackPanel>
    </Grid>
</Window>