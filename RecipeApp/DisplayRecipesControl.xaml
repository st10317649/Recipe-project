<UserControl x:Class="RecipeApp.DisplayRecipesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="300" Height="400">
    <Grid>
        <StackPanel>
            <Label Content="Recipes"/>
            <ListBox Name="lstRecipes" Margin="5" DisplayMemberPath="Name"/>
            <Button Content="Show Details" Margin="5" Click="ShowDetails_Click"/>
        </StackPanel>
    </Grid>
</UserControl>